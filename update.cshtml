@model crud.Models.employee
@{
    ViewData["Title"] = "insert";
}

<form asp-action="update" asp-controller="Home" method="post">
    @Html.HiddenFor(x=>x.ID)
    <labal>Name</labal>
    @Html.TextBoxFor(x=>x.Name,new{@class="form-control col-lg-6"})
    <labal>Email</labal>
    @Html.TextBoxFor(x=>x.Email,new{@class="form-control col-lg-6"})
    <labal>Mobile</labal>
    @Html.TextBoxFor(x=>x.Mobile,new{@class="form-control col-lg-6"})
